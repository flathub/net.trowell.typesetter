{
    "id" : "net.trowell.typesetter",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "typesetter",
    "finish-args" : [
        "--device=dri",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "typesetter=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libspelling",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libspelling.git",
                    "tag": "0.4.9",
                    "commit": "e41e11d6ca6f5af987a46caa08036d5f0f629892",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name" : "typesetter",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "--buildtype=release"
            ],
            "sources" : [
                "cargo-sources.json",
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.8.0"
                },
                {
                    "type": "inline",
                    "contents": "[source.crates-io]\nreplace-with = \"vendored-sources\"\n\n[source.vendored-sources]\ndirectory = \"cargo/vendor\"\n",
                    "dest": ".cargo",
                    "dest-filename": "config.toml"
                }
            ]
        }
    ]
}
