{
    "id": "net.trowell.typesetter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "typesetter",
    "finish-args": [
        "--device=dri",
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "typesetter=debug"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libspelling",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libspelling.git",
                    "tag": "0.4.10",
                    "commit": "1facdde8e1c0fd72bed806f9a9be2fbec83af5f2",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ]
        },
        {
            "name": "typesetter",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release"
            ],
            "sources": [
                "cargo-sources.json",
                {
                    "type": "git",
                    "url": "https://codeberg.org/haydn/typesetter.git",
                    "tag": "v0.10.1",
                    "commit": "f02fb7676ac66987ad9a31c994b10b530b1b73a0"
                },
                {
                    "type": "inline",
                    "contents": "[source.crates-io]\nreplace-with = \"vendored-sources\"\n\n[source.vendored-sources]\ndirectory = \"cargo/vendor\"\n",
                    "dest": ".cargo",
                    "dest-filename": "config.toml"
                }
            ]
        }
    ]
}
